#!/usr/bin/env node
/**
 * mpvs
 */
var md       = require("markdox"),
    fs       = require("fs"),
    srcpath  =  "./lib/",
    trgtpath =  "./doc/",
    files    = fs.readdirSync(srcpath);

 for(var i = 0; i < files.length; i++){
  md.process(srcpath  + files[i], trgtpath + files[i] + ".md", function(){
    console.log("Documentation for " + files[i] + " generated");
  });
 }