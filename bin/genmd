#!/usr/bin/env node
/**
 * mpvs
 */
var md       = require("markdox"),
    fs       = require("fs"),
    srcpath  =  "./lib/",
    trgtpath =  "./doc/",
    files    = fs.readdirSync(srcpath);

  md.process("./app.js", trgtpath + "/app.js.md", function(){
    console.log(".");
  });

 for(var i = 0; i < files.length; i++){
  md.process(srcpath  + files[i], trgtpath + files[i] + ".md", function(){
    console.log(".");
  });
 }