{
    "author": "wactbprot",
    "name": "ssmp",
    "description": "server side measurment program",
    "version": "0.1",
    "repository": {
        "type":"git",
        "url": "https://github.com/wactbprot/ssmp"
    },
    "dependencies": {
        "underscore":">=1.4.4",
	"clone":">=0.1.11",
        "restify":">=2.7.0",
	"commander":">=2.2.0",
	"bunyan":">=0.22.1",
	"object-path":">=0.5.0"
    },
    "scripts": {
	"doc":"rm doc/*.md && bin/genmd",
	"ssmp": "bin/ssmp | bunyan -l info",
	"run-cover": "istanbul cover _mocha -- -R spec | bunyan -l fatal",
	"show-cover": "firefox  coverage/lcov-report/index.html",
	"run-test": "mocha  | bunyan -l fatal",
	"test":"npm run run-test && npm run run-cover && npm run show-cover",
	"all-dev":"npm test && npm run doc"
    },
    "devDependencies": {
	"mocha":">=1.20.1",
	"istanbul":">=0.3.0",
	"markdox":">=0.1.4"
    },
    "optionalDependencies": {},
    "engines": {
        "node": "*"
    }
}